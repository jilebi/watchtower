{
  "name": "Watchtower",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Watchtower Chrome extension to help manage tabs in a kiosk style display",
  "homepage_url": "https://thiyagaraj.github.io/watchtower/",
  "icons": {
    "16": "icons/watchtower-16.png",
    "32": "icons/watchtower-32.png",
    "48": "icons/watchtower-48.png",
    "128": "icons/watchtower-128.png",
    "256": "icons/watchtower-256.png",
    "512": "icons/watchtower-512.png"
  },
  "background": {
    "scripts": [
      "core/background.js"
    ],
    "persistent": true
  },
  "options_page": "settings/index.html",
  "browser_action": {
    "default_icon": "icons/watchtower-32.png",
    "default_title": "Watchtower",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "idle",
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}